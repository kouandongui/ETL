<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="SPRING" class="ch.qos.logback.core.FileAppender">
        <file>logs/spring.log</file>

        <encoder>
            <pattern>%date %level{5} [%thread] %logger{10} | formation-apache-camel - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="PUSH" class="ch.qos.logback.core.FileAppender">
        <file>logs/push.log</file>

        <encoder>
            <pattern>%date %level{5} %logger{10} | formation-apache-camel - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level{5} %logger{10} | formation-apache-camel - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
		<!--         <appender-ref ref="SPRING" /> -->
        <!-- 		Uncomment this line to log on console or for log in docker container -->
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- turn level to DEBUG for debugging -->
    <logger name="com.inti.formation" level="INFO" additivity="false">
		<!--         <appender-ref ref="PUSH"/> -->
        <!-- 		Uncomment this line to log on console or for log in docker container-->
        <appender-ref ref="CONSOLE"/>
    </logger>

</configuration>